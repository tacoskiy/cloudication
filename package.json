{
  "name": "cloudication-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run --workspace=apps/web dev",
    "dev:api": "npm run --workspace=apps/api dev",
    "build:shared": "npm run --workspace=packages/shared-types build",
    "build:web": "npm run --workspace=apps/web build",
    "build:api": "npm run --workspace=apps/api build",
    "build": "npm run build:shared && npm run build:web && npm run build:api"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^20"
  }
}